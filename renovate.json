{
    "extends": ["config:base"],
    "timezone": "Asia/Tokyo",
    "schedule": ["at any time"],
    "labels": ["dependencies"],
    "packageRules": [
        {
        "matchDatasources": ["go"],
        "groupName": "Go modules",
        "labels": ["go", "dependencies"]
        },
        {
          "matchUpdateTypes": ["minor", "patch"],
          "automerge": true
        },
        {
          "matchUpdateTypes": ["major"],
          "automerge": false
        }
    ]
}
